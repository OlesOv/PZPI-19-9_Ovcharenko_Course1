<Window x:Class="Course.Recipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Довідник лікаря: Рецепт" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Label Content="Рецепт" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" />
        <TextBox Name="RecipeBox" Grid.Row="1" HorizontalContentAlignment="Center" IsReadOnly="True" />
        <Button x:Name="PrintButton" Click="PrintButton_Click" Grid.Row="2" Content="Друкувати"/>
    </Grid>
</Window>